@page
@model AboutModel
@{
    ViewData["Title"] = "About TechPro";
}
<div class="page-content">
    <h1 class="display-4 text-primary mb-4">Leading Technology Innovation</h1>
    <div class="about-section">
        <div class="row mb-5">
            <div class="col-md-6">
                <img src="/api/placeholder/600/400" alt="Our Office" class="img-fluid rounded shadow" />
            </div>
            <div class="col-md-6">
                <h2 class="mb-4">Our Story</h2>
                <p class="lead">Empowering businesses since 2019</p>
                <p>TechPro Solutions was founded with a clear vision: to help businesses thrive in the digital age through innovative technology solutions. Our team of experts combines deep technical knowledge with industry best practices to deliver exceptional results.</p>
            </div>
        </div>

        <div class="team-grid">
            <div class="team-member">
                <img src="/api/placeholder/150/150" alt="CEO" class="rounded-circle mb-3" />
                <h3>Sarah Chen</h3>
                <p class="text-muted">CEO & Founder</p>
            </div>
            <div class="team-member">
                <img src="/api/placeholder/150/150" alt="CTO" class="rounded-circle mb-3" />
                <h3>David Miller</h3>
                <p class="text-muted">CTO</p>
            </div>
            <div class="team-member">
                <img src="/api/placeholder/150/150" alt="Lead Architect" class="rounded-circle mb-3" />
                <h3>Lisa Johnson</h3>
                <p class="text-muted">Lead Solutions Architect</p>
            </div>
        </div>

        <div class="stats-section mt-5">
            <div class="row text-center">
                <div class="col-md-4">
                    <div class="stat-item">
                        <i class="fas fa-check-circle fa-2x text-primary mb-3"></i>
                        <h2>200+</h2>
                        <p>Successful Projects</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="stat-item">
                        <i class="fas fa-star fa-2x text-primary mb-3"></i>
                        <h2>98%</h2>
                        <p>Client Satisfaction</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="stat-item">
                        <i class="fas fa-globe fa-2x text-primary mb-3"></i>
                        <h2>25+</h2>
                        <p>Countries Served</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>